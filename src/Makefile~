.DEFAULT_GOAL := all

MPICC = mpiCC
MPICFLAGS = -std=c++11
MPICOPTFLAGS = -O3 -g -lpng
MPILDFLAGS =

TARGETS = silhouette$(EXEEXT)

all: $(TARGETS)

DISTFILES += $(DEPS_COMMON)

silhouette$(EXEEXT): silhouette.cpp $(DEPS_COMMON)
	$(MPICC) $(MPICFLAGS) $(MPICOPTFLAGS) -I/data/apps/boost/1.57/include \
	    -o $@ silhouette.cpp $(MPILDFLAGS)

clean:
	rm -f $(TARGETS) 

